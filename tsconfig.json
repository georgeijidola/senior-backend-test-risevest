{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "."
  }
}
