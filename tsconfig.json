{
  "compilerOptions": {
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "."
  }
  // "include": ["src/**/*", "config/**/*", "db/**/*"],
  // "exclude": ["node_modules", "build"]
}

