{
  "name": "senior-backend-test-risevest",
  "version": "1.0.0",
  "description": "A senior backend test for Risevest.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc -w",
    "db:setup": "ts-node db/setup.ts || node db/setup.js",
    "db:migrate:up": "ts-node db/migrate.ts up || node db/migrate.js up",
    "db:migrate:down": "ts-node db/migrate.ts down || node db/migrate.js down",
    "docker:sh": "docker exec -it senior-backend-test-risevest-api-1 sh",
    "docker:start:sh": "docker compose up -d && docker exec -it senior-backend-test-risevest-api-1 sh",
    "start": "node -r ts-node/register ./src/index.ts",
    "start:dev": "nodemon --config tooling/nodemon.json --inspect",
    "test": "cross-env NODE_ENV=test jest -c tooling/jest.config.ts",
    "test:unit": "cross-env NODE_ENV=test jest -c tooling/jest.config.ts --testPathPattern='unit.test.ts'",
    "test:integration": "cross-env NODE_ENV=test jest -c tooling/jest.config.ts --testPathPattern='integration.test.ts'",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage"
  },
  "author": "George Ijidola",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "sequelize": "^6.37.1",
    "ts-node": "^10.9.2",
    "umzug": "^3.7.0",
    "winston": "^3.12.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.29",
    "@types/pg": "^8.11.3",
    "@types/supertest": "^6.0.2",
    "@types/zxcvbn": "^4.4.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  }
}
